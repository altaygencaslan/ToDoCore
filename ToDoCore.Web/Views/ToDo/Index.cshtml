@model IList<ToDoCore.Business.Dto.ToDoMainDto>
@{
    ViewData["Title"] = "Index";
}


<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">ToDo List Project</h1>
        <p class="lead text-muted">Created by Altay Gençaslan for Netsparker Company</p>
        <p>
            <div class="row">
                <div class="col-md-3 col-md-offset-3 right">
                    <input type="text" id="txtSearch" class="form-control" placeholder="Search in ToDo">
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Create","ToDo")" class="btn btn-primary my-2">Create New</a>
                </div>
            </div>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div id="divToDoList" class="row">
            @Html.Partial("_ToDoList", Model)
        </div>
    </div>
</div>